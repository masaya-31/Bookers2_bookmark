<h2>Bookmarks</h2>
<% if @bookmark_books.exists? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @bookmark_books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_profile_image(80,80) %><br>
              <%= book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
          <td>
            <%= render 'bookmarks/bookmark', book: book %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ブックマークはありません。</p>
<% end %>