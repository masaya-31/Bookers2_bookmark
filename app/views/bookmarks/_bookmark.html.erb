<% if book.bookmarked_by?(current_user) %>
  <%= link_to book_bookmarks_path(book), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= book.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to book_bookmarks_path(book), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= book.bookmarks.count %>
  <% end %>
<% end %>